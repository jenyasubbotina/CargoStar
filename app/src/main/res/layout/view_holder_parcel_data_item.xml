<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_key_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/geometria_medium"
        android:text="@string/invoice_id"/>

    <TextView
        android:id="@+id/item_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/item_key_text_view"
        android:layout_toEndOf="@id/item_key_text_view"
        android:layout_marginEnd="35dp"
        android:gravity="end"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/geometria_medium"
        android:text="@string/service_provider"/>
</RelativeLayout>