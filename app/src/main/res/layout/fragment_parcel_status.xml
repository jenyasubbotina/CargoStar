<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="uz.alexits.cargostar.view.fragment.ParcelStatusFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="#FFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/card_bottom_radius_white"
        android:elevation="8dp">

        <TextView
            android:id="@+id/parcel_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginStart="36dp"
            android:text="@string/parcel"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/geometria_actual" />

        <TextView
            android:id="@+id/parcel_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/parcel_text_view"
            app:layout_constraintBottom_toBottomOf="@id/parcel_text_view"
            app:layout_constraintStart_toEndOf="@id/parcel_text_view"
            android:layout_marginStart="4dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/geometria_bold"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parcel_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/parcel_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/index_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="25dp"
                android:layout_marginStart="36dp"
                android:fontFamily="@font/geometria_bold"
                android:textSize="21sp"
                android:textColor="#0052A6"
                android:text="1." />

            <TextView
                android:id="@+id/parcel_id_item_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/index_text_view"
                app:layout_constraintBottom_toBottomOf="@id/index_text_view"
                app:layout_constraintStart_toEndOf="@id/index_text_view"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/geometria_medium"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:text="# C123456789012"/>

            <TextView
                android:id="@+id/from_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/parcel_id_item_text_view"
                app:layout_constraintStart_toStartOf="@id/parcel_id_item_text_view"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textColor="#A5ABC0"
                android:fontFamily="@font/geometria_bold"
                android:text="@string/tas"/>

            <ImageView
                android:id="@+id/path_item_image_view"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/from_text_view"
                app:layout_constraintBottom_toBottomOf="@id/from_text_view"
                app:layout_constraintStart_toEndOf="@id/from_text_view"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/new_bid"
                android:src="@drawable/ic_path"/>

            <TextView
                android:id="@+id/to_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/from_text_view"
                app:layout_constraintBottom_toBottomOf="@id/from_text_view"
                app:layout_constraintStart_toEndOf="@id/path_item_image_view"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textColor="#A5ABC0"
                android:fontFamily="@font/geometria_bold"
                android:text="@string/sam"/>

            <ImageView
                android:id="@+id/next_image_view"
                android:layout_width="10dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@id/parcel_id_item_text_view"
                app:layout_constraintBottom_toBottomOf="@id/from_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginEnd="41dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/new_bid"
                android:src="@drawable/ic_next_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/source_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/parcel_text_view"
            app:layout_constraintTop_toBottomOf="@id/parcel_item"
            android:layout_marginTop="95dp"
            android:textSize="19sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_bold"
            android:text="Tas."/>

        <ImageView
            android:id="@+id/path_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/source_text_view"
            app:layout_constraintBottom_toBottomOf="@id/source_text_view"
            app:layout_constraintStart_toEndOf="@id/source_text_view"
            app:layout_constraintEnd_toStartOf="@id/destination_text_view"
            android:layout_marginHorizontal="12dp"
            android:contentDescription="@string/parcel"
            android:src="@drawable/img_path"/>

        <TextView
            android:id="@+id/current_point_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/path_image_view"
            app:layout_constraintStart_toStartOf="@id/path_image_view"
            app:layout_constraintEnd_toEndOf="@id/path_image_view"
            android:layout_marginEnd="96dp"
            android:textSize="19sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_bold" />

        <TextView
            android:id="@+id/destination_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/source_text_view"
            app:layout_constraintBottom_toBottomOf="@id/source_text_view"
            android:layout_marginEnd="35dp"
            android:textSize="19sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_bold"
            android:text="Buh."/>

        <Button
            android:id="@+id/submit_status_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/current_point_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_gradient_orange"
            android:layout_marginHorizontal="155dp"
            android:layout_marginTop="58dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="18dp"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="19sp"
            android:fontFamily="@font/geometria_medium"
            android:elevation="8dp"/>

        <ImageView
            android:id="@+id/check_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/submit_status_btn"
            app:layout_constraintStart_toStartOf="@id/submit_status_btn"
            app:layout_constraintEnd_toEndOf="@id/submit_status_btn"
            android:layout_marginTop="125dp"
            android:background="@drawable/ellipse_green"
            android:contentDescription="@string/scan_parcels"
            android:padding="10dp"
            android:src="@drawable/ic_check_white"
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>