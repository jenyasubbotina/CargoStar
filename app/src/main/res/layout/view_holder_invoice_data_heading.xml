<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/heading_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/arrow_image_view"
        android:layout_marginTop="40dp"
        android:layout_marginStart="35dp"
        android:textSize="19sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/geometria_bold"
        android:text="@string/public_data" />

    <ImageView
        android:id="@+id/arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/heading_text_view"
        android:layout_marginEnd="24dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_up_arrow"
        android:contentDescription="@string/parcel_data"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"/>
</RelativeLayout>